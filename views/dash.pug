extends dashboard_template

block dashboard
    div(class='container-fluid')
        div(class='row')
            each contact in session.user.contacts
                div(class='col s6 m4 l3')
                    div(class='card')
                        div(class='card-image' style='position: relative;')
                            img(src='/images/back.png')
                            a(href='/contact/remove/' + contact.uid class='btn-floating btn-large halfway-fab waves-effect waves-light blue')
                                i(class='material-icons') close
                        div(class='card-content')
                            span(class='card-title') #{contact.name}
                            p.
                                Email: #{contact.email}
    div(class='fixed-action-btn')
        a(class='btn-floating btn-large waves-effect waves-light blue' href='/contact/add')
            i(class='material-icons') add